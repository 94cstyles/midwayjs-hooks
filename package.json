{
  "name": "midway-hooks",
  "version": "2.0.0",
  "description": "Midway Hooks - 更快的一体化应用交付方案",
  "main": "index.js",
  "author": "Lxxyx <lxxyxzj@gmail.com>",
  "homepage": "https://github.com/midwayjs/hooks",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:midwayjs/hooks.git"
  },
  "private": true,
  "scripts": {
    "build": "preconstruct build",
    "watch": "preconstruct watch",
    "clean": "lerna clean && lerna run clean --parallel",
    "test": "jest --passWithNoTests",
    "cov": "npm run test -- --coverage",
    "ci": "npm run cov -- --ci",
    "format": "pretty-quick",
    "postinstall": "preconstruct dev"
  },
  "dependencies": {
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.13.9",
    "@babel/preset-typescript": "^7.13.0",
    "@preconstruct/cli": "^2.0.6",
    "codecov": "^3.8.0",
    "execa": "^4.0.3",
    "husky": "^4.2.3",
    "jest": "^26.6.3",
    "jest-serializer-path": "^0.1.15",
    "jest-snapshot-serializer-raw": "^1.1.0",
    "lerna": "latest",
    "prettier": "^2.0.2",
    "pretty-quick": "^3.1.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  }
}
